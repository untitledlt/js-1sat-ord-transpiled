{
  "compilerOptions": {
    "declaration": true, // Generate .d.ts files
    "emitDeclarationOnly": false, // Emit both .js and .d.ts files
    "outDir": "./dist", // Output directory for bundled files
    "module": "CommonJS", // Target CommonJS format
    "target": "ESNext", // Use modern JavaScript
    "moduleResolution": "Node", // Resolve Node.js-style modules
    "strict": true, // Enable strict typing (optional)
    "skipLibCheck": true // Optional: Skip type checks for libraries
  },
  "include": ["src/**/*"], // Include your source files
  "exclude": ["node_modules", "dist"] // Exclude unnecessary files
}
